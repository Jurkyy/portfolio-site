---
/**
 * ScanLines.astro
 * Subtle CRT scan lines overlay for the hacker aesthetic.
 */
interface Props {
  opacity?: number;
  lineHeight?: number; // in pixels
}

const { opacity = 0.03, lineHeight = 2 } = Astro.props;
---

<div
  class="scan-lines"
  style={`--scan-opacity: ${opacity}; --scan-line-height: ${lineHeight}px;`}
  aria-hidden="true"
></div>

<style>
  .scan-lines {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    pointer-events: none;
    overflow: hidden;
  }

  .scan-lines::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent var(--scan-line-height),
      rgba(0, 0, 0, var(--scan-opacity)) var(--scan-line-height),
      rgba(0, 0, 0, var(--scan-opacity)) calc(var(--scan-line-height) * 2)
    );
  }

  /* Animated scan line that moves down */
  .scan-lines::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(255, 255, 255, 0.02),
      transparent
    );
    animation: scan 8s linear infinite;
  }

  @keyframes scan {
    0% {
      top: 0;
    }
    100% {
      top: 100%;
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .scan-lines::after {
      animation: none;
      display: none;
    }
  }

  /* Light mode - slightly adjust for visibility */
  :root:not(.theme-dark) .scan-lines::before {
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent var(--scan-line-height),
      rgba(0, 0, 0, calc(var(--scan-opacity) * 0.5)) var(--scan-line-height),
      rgba(0, 0, 0, calc(var(--scan-opacity) * 0.5)) calc(var(--scan-line-height) * 2)
    );
  }

  :root:not(.theme-dark) .scan-lines::after {
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(0, 0, 0, 0.01),
      transparent
    );
  }
</style>
