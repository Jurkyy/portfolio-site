---
/**
 * GlitchText.astro
 * CSS-based glitch effect for headings on hover.
 * Uses clip-path and color channel splitting.
 */
interface Props {
  text: string;
  class?: string;
  tag?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'p' | 'span';
  alwaysGlitch?: boolean; // If true, glitch continuously, not just on hover
}

const {
  text,
  class: className = '',
  tag: Tag = 'h2',
  alwaysGlitch = false
} = Astro.props;
---

<Tag class:list={['glitch', { 'glitch-always': alwaysGlitch }, className]} data-text={text}>
  {text}
</Tag>

<style>
  .glitch {
    position: relative;
    display: inline-block;
    cursor: default;
  }

  .glitch::before,
  .glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    pointer-events: none;
  }

  .glitch::before {
    color: #ff00ff;
    z-index: -1;
  }

  .glitch::after {
    color: #00ffff;
    z-index: -1;
  }

  /* Hover effect */
  .glitch:hover::before,
  .glitch:hover::after,
  .glitch-always::before,
  .glitch-always::after {
    opacity: 0.8;
  }

  .glitch:hover::before,
  .glitch-always::before {
    animation: glitch-1 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) infinite;
  }

  .glitch:hover::after,
  .glitch-always::after {
    animation: glitch-2 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) infinite reverse;
  }

  .glitch:hover,
  .glitch-always {
    animation: glitch-skew 0.5s infinite;
  }

  @keyframes glitch-1 {
    0% {
      clip-path: inset(40% 0 61% 0);
      transform: translate(-2px, -1px);
    }
    20% {
      clip-path: inset(92% 0 1% 0);
      transform: translate(1px, 2px);
    }
    40% {
      clip-path: inset(43% 0 1% 0);
      transform: translate(-1px, 1px);
    }
    60% {
      clip-path: inset(25% 0 58% 0);
      transform: translate(2px, -2px);
    }
    80% {
      clip-path: inset(54% 0 7% 0);
      transform: translate(-2px, 2px);
    }
    100% {
      clip-path: inset(58% 0 43% 0);
      transform: translate(2px, -1px);
    }
  }

  @keyframes glitch-2 {
    0% {
      clip-path: inset(65% 0 14% 0);
      transform: translate(2px, 1px);
    }
    20% {
      clip-path: inset(18% 0 65% 0);
      transform: translate(-1px, -2px);
    }
    40% {
      clip-path: inset(8% 0 67% 0);
      transform: translate(1px, -1px);
    }
    60% {
      clip-path: inset(45% 0 12% 0);
      transform: translate(-2px, 2px);
    }
    80% {
      clip-path: inset(78% 0 5% 0);
      transform: translate(2px, -2px);
    }
    100% {
      clip-path: inset(29% 0 58% 0);
      transform: translate(-2px, 1px);
    }
  }

  @keyframes glitch-skew {
    0% {
      transform: skew(0deg);
    }
    10% {
      transform: skew(-0.5deg);
    }
    20% {
      transform: skew(0.5deg);
    }
    30% {
      transform: skew(0deg);
    }
    40% {
      transform: skew(0.3deg);
    }
    50% {
      transform: skew(-0.3deg);
    }
    60% {
      transform: skew(0deg);
    }
    70% {
      transform: skew(-0.2deg);
    }
    80% {
      transform: skew(0.2deg);
    }
    90% {
      transform: skew(0deg);
    }
    100% {
      transform: skew(-0.1deg);
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .glitch:hover::before,
    .glitch:hover::after,
    .glitch-always::before,
    .glitch-always::after {
      animation: none;
      opacity: 0;
    }

    .glitch:hover,
    .glitch-always {
      animation: none;
    }
  }
</style>
