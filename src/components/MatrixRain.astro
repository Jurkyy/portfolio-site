---
/**
 * MatrixRain.astro
 * A subtle matrix-style falling characters effect using canvas.
 * Respects prefers-reduced-motion and works in both light and dark modes.
 */
interface Props {
  opacity?: number;
  speed?: number;
}

const { opacity = 0.03, speed = 0.5 } = Astro.props;
---

<canvas
  id="matrix-rain"
  class="matrix-rain"
  data-opacity={opacity}
  data-speed={speed}
></canvas>

<style>
  .matrix-rain {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    opacity: 1;
  }

  @media (prefers-reduced-motion: reduce) {
    .matrix-rain {
      display: none;
    }
  }
</style>

<script>
  function initMatrixRain() {
    const canvas = document.getElementById('matrix-rain') as HTMLCanvasElement;
    if (!canvas) return;

    // Check for reduced motion preference
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      canvas.style.display = 'none';
      return;
    }

    // Detect low-power devices
    const isLowPowerDevice = (): boolean => {
      const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
      const hasLowCores = navigator.hardwareConcurrency && navigator.hardwareConcurrency <= 4;
      const prefersReducedData = 'connection' in navigator &&
        (navigator as any).connection?.saveData === true;
      return isMobile || hasLowCores || prefersReducedData;
    };

    // Disable on low-power devices for better performance
    if (isLowPowerDevice()) {
      canvas.style.display = 'none';
      return;
    }

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    // Get configuration from data attributes
    const baseOpacity = parseFloat(canvas.dataset.opacity || '0.03');
    const speed = parseFloat(canvas.dataset.speed || '0.5');

    // Reduced character set for better performance
    const chars = '0123456789ABCDEFGHJKLMNPQRSTUVWXYZ<>[]|/\\*#@';
    const charArray = chars.split('');

    let columns: number;
    let drops: number[];
    let fontSize = 20; // Larger font = fewer columns = better performance
    let animationId: number | null = null;
    let resizeTimeout: ReturnType<typeof setTimeout> | null = null;

    function resize() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
      columns = Math.floor(canvas.width / fontSize);
      drops = [];
      for (let i = 0; i < columns; i++) {
        drops[i] = Math.random() * -100;
      }
    }

    // Throttled resize handler
    function handleResize() {
      if (resizeTimeout) clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(resize, 150);
    }

    resize();
    window.addEventListener('resize', handleResize);

    // Check theme for color
    function getColor() {
      const isDark = document.documentElement.classList.contains('theme-dark');
      return isDark ? '#00ff41' : '#7611a6'; // Green for dark, purple for light
    }

    function draw() {
      // Semi-transparent black to create fade effect
      const isDark = document.documentElement.classList.contains('theme-dark');
      ctx.fillStyle = isDark ? `rgba(9, 11, 17, ${0.05})` : `rgba(255, 255, 255, ${0.05})`;
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      ctx.fillStyle = getColor();
      ctx.font = `${fontSize}px monospace`;
      ctx.globalAlpha = baseOpacity * 3; // Multiply for visibility since we're fading

      for (let i = 0; i < drops.length; i++) {
        // Random character
        const char = charArray[Math.floor(Math.random() * charArray.length)];
        const x = i * fontSize;
        const y = drops[i] * fontSize;

        // Draw character with varying opacity based on position
        const distanceFromTop = drops[i];
        const fadeAlpha = Math.min(1, distanceFromTop / 10);
        ctx.globalAlpha = baseOpacity * 3 * fadeAlpha;

        ctx.fillText(char, x, y);

        // Reset drop to top with some randomness
        if (y > canvas.height && Math.random() > 0.975) {
          drops[i] = 0;
        }
        drops[i] += speed;
      }
    }

    // Animate at a slower rate for subtlety and performance
    let lastTime = 0;
    const frameInterval = 100; // ~10fps for subtle effect and better performance

    function animate(currentTime: number) {
      if (currentTime - lastTime >= frameInterval) {
        draw();
        lastTime = currentTime;
      }
      animationId = requestAnimationFrame(animate);
    }

    animationId = requestAnimationFrame(animate);

    // Listen for theme changes
    const observer = new MutationObserver(() => {
      // Clear canvas on theme change
      ctx.clearRect(0, 0, canvas.width, canvas.height);
    });

    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ['class']
    });

    // Cleanup on page navigation
    document.addEventListener('astro:before-swap', () => {
      if (animationId) cancelAnimationFrame(animationId);
      if (resizeTimeout) clearTimeout(resizeTimeout);
      window.removeEventListener('resize', handleResize);
      observer.disconnect();
    }, { once: true });
  }

  // Initialize on load and after view transitions
  document.addEventListener('astro:page-load', initMatrixRain);
  if (document.readyState === 'complete') {
    initMatrixRain();
  } else {
    document.addEventListener('DOMContentLoaded', initMatrixRain);
  }
</script>
