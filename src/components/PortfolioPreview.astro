---
import type { CollectionEntry } from "astro:content";

interface Props {
  project: CollectionEntry<"projects">;
}

const { data, slug } = Astro.props.project;
const isCollection = data.children !== undefined;
const hasSize = data.size !== undefined;

let transition_id: string = slug;
if (slug.includes("/")) {
  transition_id = slug.split("/")[1] as string;
}
---

<a class="card" href={`/projects/${slug}`}>
  <span class="title">{data.title}</span>
  {hasSize && <span class="size">{data.size}</span>}

  <img
    transition:name={transition_id}
    src={data.img}
    alt={data.img_alt || ""}
    loading="lazy"
    decoding="async"
  />
  {isCollection && <span class="collection">Collection</span>}
</a>

<style>
  .card {
    display: grid;
    grid-template: auto 1fr / auto 1fr;
    height: 11rem;
    background: var(--gradient-subtle);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    text-decoration: none;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: 500;
    transition: all var(--transition-normal);
  }

  .card:hover {
    box-shadow: var(--shadow-lg), var(--glow-accent);
    transform: translateY(-4px) scale(1.02);
    border-color: var(--accent-overlay);
  }

  .title {
    grid-area: 1 / 1 / 1 / 1;
    z-index: 1;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    color: var(--gray-200);
    border-radius: var(--radius-sm);
    border: 1px solid var(--glass-border);
    transition: all var(--transition-fast);
  }

  .size {
    grid-area: 3 / 3 / 3 / 3;
    z-index: 1;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--gradient-accent);
    color: var(--gray-50);
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    box-shadow: var(--glow-accent);
  }

  .collection {
    grid-area: 3 / 3 / 3 / 3;
    z-index: 1;
    margin: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--gradient-cyber);
    color: var(--gray-50);
    border-radius: var(--radius-sm);
    font-size: var(--text-sm);
    box-shadow: var(--glow-secondary);
  }

  .card:hover .title {
    background: var(--glass-bg);
    border-color: var(--accent-overlay);
    color: var(--gray-100);
  }

  img {
    grid-area: 1 / 1 / 4 / 4;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .card:hover img {
    transform: scale(1.05);
  }

  @media (min-width: 50em) {
    .card {
      height: 22rem;
      border-radius: var(--radius-xl);
    }

    .title {
      border-radius: var(--radius-md);
    }
  }

  @media screen and (max-width: 799px) {
    .collection-indicator {
      position: static;
      top: auto;
      right: auto;
      margin: 0.5rem auto;
    }
  }

  .collection-indicator-child:hover {
    transform: scale(1.1);
    transition: transform 50ms ease-in-out;
  }
</style>
