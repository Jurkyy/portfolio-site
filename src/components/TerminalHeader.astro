---
/**
 * TerminalHeader.astro
 * A terminal-style section header that displays a command prompt with a blinking cursor.
 * Enhanced with full terminal window styling for the hacker aesthetic.
 */
interface Props {
  command: string;
  class?: string;
  path?: string;
  user?: string;
  host?: string;
}

const {
  command,
  class: className = '',
  path = '~',
  user = 'wolf',
  host = 'hrt'
} = Astro.props;
---

<div class:list={['terminal-header', className]}>
  <div class="terminal-line">
    <span class="prompt">
      <span class="prompt-user">{user}</span>
      <span class="prompt-at">@</span>
      <span class="prompt-host">{host}</span>
      <span class="prompt-colon">:</span>
      <span class="prompt-path">{path}</span>
      <span class="prompt-dollar">$</span>
    </span>
    <span class="command">{command}</span>
  </div>
</div>

<style>
  .terminal-header {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    margin-bottom: 1rem;
    padding: 0.75rem 1rem;
    background: rgba(10, 10, 15, 0.8);
    border: 1px solid rgba(6, 182, 212, 0.25);
    border-radius: 6px;
    box-shadow:
      0 0 20px rgba(6, 182, 212, 0.05),
      inset 0 1px 0 rgba(255, 255, 255, 0.03);
  }

  .terminal-line {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .prompt {
    display: flex;
    align-items: center;
  }

  .prompt-user {
    color: #28ca42;
  }

  .prompt-at {
    color: var(--gray-500);
  }

  .prompt-host {
    color: var(--accent-secondary);
  }

  .prompt-colon {
    color: var(--gray-500);
  }

  .prompt-path {
    color: #a855f7;
  }

  .prompt-dollar {
    color: var(--gray-400);
    margin-left: 0.25rem;
  }

  .command {
    color: var(--gray-200);
  }

  /* Hover effect */
  .terminal-header:hover {
    border-color: rgba(6, 182, 212, 0.4);
    box-shadow: 0 0 25px rgba(6, 182, 212, 0.1);
  }

  /* Responsive */
  @media (max-width: 50em) {
    .terminal-header {
      font-size: 0.75rem;
      padding: 0.6rem 0.8rem;
    }
  }
</style>
