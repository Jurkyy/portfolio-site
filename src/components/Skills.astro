---
import Icon from "./Icon.astro";
---

<section class="skills-section">
	<div class="skills-cards">
		<div class="skill-card">
			<Icon
				icon="terminal-window"
				color="var(--accent-regular)"
				size="2rem"
				gradient
			/>
			<h2>Infrastructure & Ops</h2>
			<p>
				Monitoring, debugging, and optimizing high-frequency trading infrastructure.
			</p>
			<div class="skill-tags">
				<span class="tag">Kubernetes</span>
				<span class="tag">Prometheus</span>
				<span class="tag">Grafana</span>
			</div>
		</div>

		<div class="skill-card">
			<Icon
				icon="code"
				color="var(--accent-regular)"
				size="2rem"
				gradient
			/>
			<h2>Systems Programming</h2>
			<p>
				Building low-latency tools and automation for trading systems.
			</p>
			<div class="skill-tags">
				<span class="tag">Rust</span>
				<span class="tag">Python</span>
				<span class="tag">C++</span>
			</div>
		</div>

		<div class="skill-card">
			<Icon
				icon="strategy"
				color="var(--accent-regular)"
				size="2rem"
				gradient
			/>
			<h2>Result-driven</h2>
			<p>
				Composed under pressure, disciplined in execution, always improving.
			</p>
			<div class="skill-tags">
				<span class="tag">SRE</span>
				<span class="tag">TradOps</span>
			</div>
		</div>
	</div>
</section>

<style>
	.skills-section {
		width: 100%;
	}

	.skills-cards {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	@media (min-width: 50em) {
		.skills-cards {
			display: grid;
			grid-template-columns: repeat(3, 1fr);
			gap: 1.5rem;
		}
	}

	.skill-card {
		padding: 1.5rem;
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: var(--radius-lg);
		backdrop-filter: blur(var(--glass-blur));
		-webkit-backdrop-filter: blur(var(--glass-blur));
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.skill-card:hover {
		border-color: var(--accent-secondary);
		box-shadow: 0 0 25px rgba(6, 182, 212, 0.1);
		transform: translateY(-4px);
	}

	.skill-card h2 {
		font-size: 1.1rem;
		color: var(--gray-0);
		margin: 0;
	}

	.skill-card p {
		color: var(--gray-400);
		font-size: 0.9rem;
		line-height: 1.5;
		margin: 0;
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.4rem;
		margin-top: auto;
	}

	.tag {
		font-size: 0.75rem;
		padding: 0.25rem 0.6rem;
		background: rgba(6, 182, 212, 0.1);
		border: 1px solid rgba(6, 182, 212, 0.25);
		border-radius: 4px;
		color: var(--accent-secondary);
	}
</style>
