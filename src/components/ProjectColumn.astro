---
import projects from "../../public/assets/planner.json";

interface Props {
  category: string;
}

const { category } = Astro.props;
---

<div class="project-column">
  <h3>{category}</h3>
  <ul>
    {
      projects
        .filter((project) => project.category === category)
        .map((project) => (
          <li>
            <b>{project.name}</b>
            <div>{project.tags.join(", ")}</div>
            <a href={project.inspiration}>inspiration</a>
          </li>
        ))
    }
  </ul>
</div>

<style>
  /* Style the container for each project column */
  .project-column {
    flex: 1;
    margin: 10px;
    padding: 20px;
    background-color: hsla(var(--gray-999-basis), 0.5);
    border-radius: 5px;
    text-align: center;
  }

  /* Style the h2 title at the top */
  .project-column h3 {
    margin-bottom: 10px;
  }

  .project-column h2 {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }

  /* Style the list of items */
  .project-column ul {
    list-style: none;
    padding: 0;
  }

  /* Style each item in the column */
  .project-column li {
    padding: 10px 0;
    border-top: 1px solid #ddd;
  }
</style>
