---
import { getCollection } from "astro:content";

// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from "../layouts/BaseLayout.astro";

// Component Imports
import CallToAction from "../components/CallToAction.astro";
import Grid from "../components/Grid.astro";
import Hero from "../components/Hero.astro";
import Icon from "../components/Icon.astro";
import Pill from "../components/Pill.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import GlitchText from "../components/GlitchText.astro";
import TerminalHeader from "../components/TerminalHeader.astro";

// Page section components
import ContactCTA from "../components/ContactCTA.astro";
import Skills from "../components/Skills.astro";

// Content Fetching: List top 3 most popular projects
const projects = (await getCollection("projects"))
	.filter((project) => !project.slug.includes("/"))
	.sort((a, b) => (b.data.popularity ?? 50) - (a.data.popularity ?? 50))
	.slice(0, 3);
---

<BaseLayout>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<div class="hero-content">
					<div class="system-header">
						<span class="system-tag">[SYS]</span>
						<span class="system-status">
							<span class="status-dot"></span>
							ACTIVE
						</span>
					</div>

					<Hero
						title="Wolfgang L. Bubberman"
						tagline="Trading Operations Analyst at Hudson River Trading. Building and maintaining systems that trade global markets."
						align="start"
						typing={true}
					>
						<div class="roles">
							<Pill>
								<Icon icon="terminal-window" size="1.33em" /> SRE
							</Pill>
							<Pill>
								<Icon icon="gear" size="1.33em" /> TradOps
							</Pill>
							<Pill>
								<Icon icon="code" size="1.33em" /> Rust Dev
							</Pill>
						</div>

						<div class="quick-stats">
							<div class="stat-item">
								<span class="stat-label">location</span>
								<span class="stat-value">London, UK</span>
							</div>
							<div class="stat-item">
								<span class="stat-label">focus</span>
								<span class="stat-value">Low-latency Systems</span>
							</div>
							<div class="stat-item">
								<span class="stat-label">stack</span>
								<span class="stat-value">Rust / Python / K8s</span>
							</div>
						</div>
					</Hero>
				</div>

				<div class="portrait-container">
					<div class="portrait-frame">
						<div class="frame-corner top-left"></div>
						<div class="frame-corner top-right"></div>
						<div class="frame-corner bottom-left"></div>
						<div class="frame-corner bottom-right"></div>
						<img
							alt="Wolfgang Bubberman portrait"
							width="480"
							height="620"
							src="/assets/portrait.jpg"
						/>
						<div class="portrait-overlay">
							<span class="overlay-text">ID: WOLF-001</span>
						</div>
					</div>
				</div>
			</header>

			<Skills />
		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<TerminalHeader command="ls -la ./projects/ | head -n 4" />
					<GlitchText text="Selected Projects" tag="h3" />
					<p class="section-desc">
						<span class="comment-syntax">//</span> Recent work in trading systems, infrastructure, and open source
					</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/projects/">
						View All
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</section>

			<section class="section with-background bg-variant">
				<header class="section-header stack gap-2 lg:gap-4">
					<TerminalHeader command="cat ~/.config/interests.yaml" />
					<GlitchText text="Interests" tag="h3" />
					<p class="section-desc">
						<span class="comment-syntax">#</span> What I'm passionate about outside of work
					</p>
				</header>

				<div class="gallery">
					<Grid variant="small">
						{
							[
								{ name: "Trading Systems", icon: "ðŸ“ˆ" },
								{ name: "Site Reliability", icon: "ðŸ”§" },
								{ name: "Rust Development", icon: "ðŸ¦€" },
								{ name: "Low-Latency Code", icon: "âš¡" },
								{ name: "Terminal Graphics", icon: "ðŸ–¥ï¸" },
								{ name: "Security Research", icon: "ðŸ”" },
								{ name: "Powerlifting", icon: "ðŸ‹ï¸" },
							].map((interest) => (
								<li class="mention-card">
									<span class="interest-icon">{interest.icon}</span>
									<p>{interest.name}</p>
								</li>
							))
						}
					</Grid>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	.hero-content {
		width: 100%;
	}

	.system-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 1rem;
		font-family: var(--font-mono);
		font-size: 0.8rem;
	}

	.system-tag {
		color: var(--accent-secondary);
		background: rgba(6, 182, 212, 0.1);
		padding: 0.25rem 0.5rem;
		border: 1px solid rgba(6, 182, 212, 0.3);
		border-radius: 3px;
	}

	.system-status {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: #28ca42;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.status-dot {
		width: 8px;
		height: 8px;
		background: #28ca42;
		border-radius: 50%;
		box-shadow: 0 0 8px #28ca42;
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.5; }
	}

	.roles {
		display: none;
	}

	.quick-stats {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		margin-top: 1.5rem;
		padding: 1rem;
		background: rgba(10, 10, 15, 0.6);
		border: 1px solid rgba(6, 182, 212, 0.2);
		border-radius: 6px;
		font-family: var(--font-mono);
	}

	.stat-item {
		display: flex;
		align-items: center;
		font-size: 0.85rem;
	}

	.stat-label {
		color: var(--accent-secondary);
		min-width: 80px;
	}

	.stat-label::after {
		content: ':';
		margin-right: 0.75rem;
	}

	.stat-value {
		color: var(--gray-200);
	}

	.portrait-container {
		width: 100%;
		max-width: 320px;
	}

	.portrait-frame {
		position: relative;
		padding: 8px;
		background: rgba(10, 10, 15, 0.8);
		border: 1px solid var(--accent-secondary);
		border-radius: 8px;
		box-shadow:
			0 0 20px rgba(6, 182, 212, 0.2),
			inset 0 0 20px rgba(6, 182, 212, 0.05);
	}

	.frame-corner {
		position: absolute;
		width: 20px;
		height: 20px;
		border-color: var(--accent-secondary);
		border-style: solid;
		border-width: 0;
		z-index: 2;
	}

	.frame-corner.top-left {
		top: -1px;
		left: -1px;
		border-top-width: 3px;
		border-left-width: 3px;
	}

	.frame-corner.top-right {
		top: -1px;
		right: -1px;
		border-top-width: 3px;
		border-right-width: 3px;
	}

	.frame-corner.bottom-left {
		bottom: -1px;
		left: -1px;
		border-bottom-width: 3px;
		border-left-width: 3px;
	}

	.frame-corner.bottom-right {
		bottom: -1px;
		right: -1px;
		border-bottom-width: 3px;
		border-right-width: 3px;
	}

	.hero img {
		width: 100%;
		aspect-ratio: 5 / 4;
		object-fit: cover;
		object-position: top;
		border-radius: 4px;
		display: block;
	}

	.portrait-overlay {
		position: absolute;
		bottom: 16px;
		left: 16px;
		right: 16px;
		padding: 0.5rem;
		background: rgba(10, 10, 15, 0.9);
		border: 1px solid rgba(6, 182, 212, 0.5);
		border-radius: 4px;
		text-align: center;
	}

	.overlay-text {
		font-family: var(--font-mono);
		font-size: 0.75rem;
		color: var(--accent-secondary);
		letter-spacing: 0.15em;
		text-transform: uppercase;
	}

	@media (min-width: 50em) {
		.hero {
			display: grid;
			grid-template-columns: 6fr 4fr;
			padding-inline: 2.5rem;
			gap: 3.75rem;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
			flex-wrap: wrap;
		}

		.quick-stats {
			flex-direction: row;
			gap: 2rem;
		}

		.stat-item {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.25rem;
		}

		.stat-label::after {
			content: '';
			margin-right: 0;
		}

		.portrait-container {
			max-width: none;
		}

		.hero img {
			aspect-ratio: 3 / 4;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: "";
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background: url("/assets/backgrounds/noise.png") top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
		line-height: var(--leading-relaxed);
	}

	.section-header h3,
	.section-header :global(.glitch) {
		font-size: var(--text-2xl);
	}

	.section-desc {
		font-family: var(--font-mono);
		font-size: 0.9rem !important;
	}

	.comment-syntax {
		color: var(--accent-secondary);
		opacity: 0.7;
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: "header header header header" "gallery gallery gallery gallery";
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: "header header header cta" "gallery gallery gallery gallery";
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3,
		.section-header :global(.glitch) {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */

	.mention-card {
		display: flex;
		flex-direction: column;
		height: 7rem;
		justify-content: center;
		align-items: center;
		text-align: center;
		gap: 0.5rem;
		border: 1px solid var(--glass-border);
		border-radius: var(--radius-xl);
		color: var(--gray-300);
		background: var(--glass-bg);
		backdrop-filter: blur(var(--glass-blur));
		-webkit-backdrop-filter: blur(var(--glass-blur));
		box-shadow: var(--shadow-sm);
		font-weight: 500;
		transition: all var(--transition-normal);
		font-family: var(--font-mono);
		font-size: 0.9rem;
	}

	.interest-icon {
		font-size: 1.5rem;
	}

	.mention-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-md), var(--glow-secondary);
		border-color: var(--accent-secondary-overlay);
		color: var(--gray-100);
	}

	@media (min-width: 50em) {
		.mention-card {
			border-radius: var(--radius-xl);
			height: 9.5rem;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		.status-dot {
			animation: none;
		}
	}
</style>
