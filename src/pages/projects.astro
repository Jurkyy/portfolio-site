---
import { getCollection } from "astro:content";

import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import Hero from "../components/Hero.astro";
import Grid from "../components/Grid.astro";

const projects = (await getCollection("projects"))
  .filter((entry) => !entry.slug.includes("/"))
  .sort((a, b) => {
    const popA = a.data.popularity ?? 50;
    const popB = b.data.popularity ?? 50;
    return popB - popA;
  });

const projectCount = projects.length;
const rustCount = projects.filter(p => p.data.tags?.includes('Rust')).length;
const pythonCount = projects.filter(p => p.data.tags?.includes('Python')).length;
const infraCount = projects.filter(p => p.data.tags?.includes('DevOps') || p.data.tags?.includes('Infrastructure') || p.data.tags?.includes('Shell')).length;
---

<BaseLayout
  title="My Projects | Wolfgang Bubberman"
  description="Learn about Wolfgang Bubberman's most recent projects"
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero
        title="Projects"
        tagline="A collection of personal projects, open source contributions, and professional work."
        align="start"
      />

      <div class="project-stats">
        <div class="stat-card">
          <div class="stat-icon rust">ü¶Ä</div>
          <span class="stat-number">{rustCount}</span>
          <span class="stat-desc">Rust</span>
        </div>
        <div class="stat-card">
          <div class="stat-icon python">üêç</div>
          <span class="stat-number">{pythonCount}</span>
          <span class="stat-desc">Python</span>
        </div>
        <div class="stat-card">
          <div class="stat-icon infra">‚öôÔ∏è</div>
          <span class="stat-number">{infraCount}</span>
          <span class="stat-desc">Infra</span>
        </div>
        <div class="stat-card highlight">
          <div class="stat-icon total">üì¶</div>
          <span class="stat-number">{projectCount}</span>
          <span class="stat-desc">Total</span>
        </div>
      </div>

      <Grid variant="offset">
        {
          projects.map((project) => (
            <li>
              <PortfolioPreview project={project} />
            </li>
          ))
        }
      </Grid>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>

<style>
  .project-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-bottom: 1rem;
  }

  @media (min-width: 50em) {
    .project-stats {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .stat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1.5rem 1rem;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    border-color: var(--accent-secondary);
    box-shadow: 0 0 25px rgba(6, 182, 212, 0.1);
    transform: translateY(-4px);
  }

  .stat-card.highlight {
    border-color: rgba(168, 85, 247, 0.3);
  }

  .stat-card.highlight:hover {
    border-color: var(--accent-regular);
    box-shadow: 0 0 25px rgba(168, 85, 247, 0.15);
  }

  .stat-icon {
    font-size: 1.75rem;
    line-height: 1;
  }

  .stat-number {
    font-family: var(--font-mono);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--gray-0);
    line-height: 1;
  }

  .stat-desc {
    font-size: 0.85rem;
    color: var(--gray-400);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
</style>
