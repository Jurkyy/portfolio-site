<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: var(--radius-xl);
		box-shadow: var(--shadow-lg);
		border: 1px solid var(--glass-border);
		transition: all var(--transition-normal);
	}

	img:hover {
		box-shadow: var(--shadow-lg), var(--glow-accent);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
		line-height: var(--leading-relaxed);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
		letter-spacing: var(--tracking-tight);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		color: var(--accent-secondary);
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: all var(--transition-fast);
	}

	.content :global(a:hover) {
		text-decoration-color: currentColor;
	}

	/* Job Cards */
	.job-cards {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.job-card {
		padding: 1.25rem;
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: var(--radius-lg);
		backdrop-filter: blur(var(--glass-blur));
		transition: all 0.3s ease;
		position: relative;
	}

	.job-card:hover {
		border-color: var(--accent-secondary);
		box-shadow: 0 0 25px rgba(6, 182, 212, 0.1);
		transform: translateX(4px);
	}

	.job-card.current {
		border-color: rgba(40, 202, 66, 0.3);
	}

	.job-card.current:hover {
		border-color: rgba(40, 202, 66, 0.6);
		box-shadow: 0 0 25px rgba(40, 202, 66, 0.1);
	}

	.job-badge {
		position: absolute;
		top: 1rem;
		right: 1rem;
		font-size: 0.65rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		padding: 0.25rem 0.5rem;
		background: rgba(40, 202, 66, 0.15);
		border: 1px solid rgba(40, 202, 66, 0.3);
		border-radius: 4px;
		color: #28ca42;
	}

	.job-card h3 {
		font-size: 1.1rem;
		color: var(--gray-0);
		margin-bottom: 0.25rem;
	}

	.job-card .company {
		color: var(--accent-secondary);
		font-weight: 500;
		margin-bottom: 0.25rem;
	}

	.job-card .meta {
		font-size: 0.85rem;
		color: var(--gray-400);
		margin-bottom: 0.5rem;
	}

	.job-card .desc {
		font-size: 0.9rem;
		color: var(--gray-300);
	}

	/* Education Cards */
	.edu-cards {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	@media (min-width: 50em) {
		.edu-cards {
			flex-direction: row;
		}
	}

	.edu-card {
		display: flex;
		align-items: flex-start;
		gap: 1rem;
		padding: 1.25rem;
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: var(--radius-lg);
		flex: 1;
		transition: all 0.3s ease;
	}

	.edu-card:hover {
		border-color: var(--accent-regular);
		box-shadow: 0 0 25px rgba(168, 85, 247, 0.1);
	}

	.edu-icon {
		font-size: 2rem;
	}

	.edu-info h3 {
		font-size: 1rem;
		color: var(--gray-0);
		margin-bottom: 0.25rem;
	}

	.edu-info .school {
		color: var(--accent-regular);
		font-weight: 500;
		margin-bottom: 0.125rem;
	}

	.edu-info .focus {
		font-size: 0.85rem;
		color: var(--gray-400);
	}

	/* Skills Grid */
	.skills-grid {
		display: grid;
		gap: 1.5rem;
	}

	@media (min-width: 50em) {
		.skills-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	.skill-category h4 {
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		color: var(--gray-300);
		margin-bottom: 0.75rem;
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tag {
		font-size: 0.85rem;
		padding: 0.4rem 0.75rem;
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: 6px;
		color: var(--gray-300);
		transition: all 0.2s ease;
	}

	.tag:hover {
		border-color: var(--accent-secondary);
		color: var(--gray-100);
	}

	.tag.highlight {
		background: rgba(6, 182, 212, 0.1);
		border-color: rgba(6, 182, 212, 0.3);
		color: var(--accent-secondary);
	}

	/* Language Bars */
	.lang-bars {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.lang-item {
		display: grid;
		grid-template-columns: 80px 1fr 60px;
		align-items: center;
		gap: 1rem;
		padding: 0.75rem 1rem;
		background: var(--glass-bg);
		border: 1px solid var(--glass-border);
		border-radius: var(--radius-md);
	}

	.lang-name {
		font-size: 0.9rem;
		color: var(--gray-200);
	}

	.lang-bar {
		height: 8px;
		background: rgba(30, 30, 40, 0.8);
		border-radius: 4px;
		overflow: hidden;
	}

	.lang-fill {
		height: 100%;
		background: linear-gradient(90deg, var(--accent-secondary), var(--accent-regular));
		border-radius: 4px;
	}

	.lang-level {
		font-size: 0.8rem;
		color: var(--accent-secondary);
		text-align: right;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>
